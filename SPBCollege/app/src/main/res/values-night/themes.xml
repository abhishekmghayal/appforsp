<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SPBCollege" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary" >@color/primaryColor</item>
        <item name="android:colorPrimaryDark" >@color/primaryColor</item>
        <item name="android:navigationBarColor">@color/primaryColor</item>


        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.SPBCollege" parent="Base.Theme.SPBCollege" />

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModelStyle</item>
    </style>

    <style name="AppModelStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/sheet_background_night</item>
        <item name="behavior_peekHeight">600dp</item>
    </style>

    <style name="PrincipalActionBarStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="android:colorPrimaryDark" >@color/primaryColor</item>
        <item name="actionBarSize">70dp</item>
        <item name="title">Principal</item>
    </style>

    <style name="ClerkActionBarStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="android:colorPrimaryDark" >@color/primaryColor</item>
        <item name="actionBarSize">70dp</item>
        <item name="title">Clerk</item>
    </style>

    <style name="TeacherActionBarStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="android:colorPrimaryDark" >@color/primaryColor</item>
        <item name="actionBarSize">70dp</item>
        <item name="title">Teacher</item>
    </style>

    <style name="ActionBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="android:colorPrimaryDark">@color/primaryColor</item>

    </style>


</resources>