            <solid android:color="@android:color/transparent" />
            <stroke

                android:color="#FF0909"
            android:width="2dp"
            />
        </shape>
    </item>

    <!-- Border for each TableRow -->
    <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp">
