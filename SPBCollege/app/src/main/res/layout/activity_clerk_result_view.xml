<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClerkModule.ClerkResult.ClerkResultView">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:id="@+id/profile_layout"
        android:layout_marginTop="-160dp"
        android:elevation="10dp"
        app:cardCornerRadius="50dp"
        app:cardBackgroundColor="@color/primaryColor">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/com_lay"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_teacher"
                android:text="Result's Class"
                android:textSize="55dp"

                android:textColor="@color/secondaryColor"
                android:fontFamily="@font/playfairdisplayvariablefontwght"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="150dp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="900dp"
        android:id="@+id/card_class_Secton"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="25dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_student_eightclass"
            android:layout_width="340dp"
            android:layout_height="120dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="50dp"
            android:elevation="10dp"
            android:onClick="eightClass"
            app:cardCornerRadius="20dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_student_8thclass"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/eightclasslogo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="46dp"
                    android:layout_marginTop="30dp"
                    android:layout_toRightOf="@id/img_student_8thclass"
                    android:fontFamily="sans-serif-black"
                    android:text="Eight Class \nResult Section"
                    android:textColor="@color/primaryColor"
                    android:textSize="20dp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_student_marks_teacher"
            android:layout_width="340dp"
            android:layout_height="120dp"
            android:onClick="nineClass"
            android:layout_below="@id/card_student_eightclass"
            android:layout_marginStart="50dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="50dp"
            android:elevation="10dp"
            app:cardCornerRadius="20dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_student_9thclass"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="18dp"
                    android:src="@drawable/nineclasslogo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="30dp"
                    android:layout_toRightOf="@id/img_student_9thclass"
                    android:fontFamily="sans-serif-black"
                    android:text="Nine Class \nResult Section"
                    android:textColor="@color/primaryColor"
                    android:textSize="20dp" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</RelativeLayout>