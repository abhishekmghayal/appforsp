<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClerkModule.Icard.StudentICardActivity">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

  </LinearLayout>
  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/tt_admission_Parent_Info_sample"
          android:text="Student I-Card"
          android:fontFamily="@font/f1"
          android:padding="15dp"
          android:layout_marginTop="10dp"
          android:textColor="@color/primaryColor"
          android:textColorHint="@color/primaryColor"
          android:textSize="25sp"
          android:layout_centerHorizontal="true"
          android:textStyle="bold"/>

      <RelativeLayout
          android:layout_width="@dimen/_110sdp"
          android:layout_height="@dimen/_110sdp"
          android:layout_marginTop="@dimen/_20sdp"
          android:layout_marginLeft="@dimen/_100sdp"
          android:layout_below="@id/tt_admission_Parent_Info_sample"
          android:id="@+id/profile_layout"
          >

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_centerHorizontal="true"
            app:cardCornerRadius="@dimen/_220sdp"
            app:cardBackgroundColor="@color/white">

          <ImageView
              android:id="@+id/Icard_student_photo"
              android:layout_width="@dimen/_100sdp"
              android:layout_height="@dimen/_100sdp"
              android:scaleType="centerCrop"
              android:src="@drawable/profile_icon" />


        </androidx.cardview.widget.CardView>

      </RelativeLayout>
      <EditText
          android:id="@+id/et__aS_idCard_Name"
          android:layout_width="320dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="20dp"
          android:layout_marginLeft="10dp"
          android:layout_marginTop="20dp"
          android:layout_marginEnd="0dp"
          android:layout_marginBottom="20dp"
          android:background="@drawable/et_rounded_corner"
          android:drawableStart="@drawable/icon_lock"
          android:drawablePadding="8dp"
          android:hint="Name of Student"
          android:inputType="text"
          android:padding="15dp"
          android:textColor="@color/primaryColor"
          android:textColorHint="@color/primaryColor"
          android:textSize="15sp"
          android:textStyle="bold"
          android:layout_below="@id/profile_layout"/>



      <EditText
          android:id="@+id/et__aS_idCard_DOB"
          android:layout_width="200dp"
          android:layout_below="@+id/et__aS_idCard_Name"
          android:layout_height="wrap_content"
          android:layout_marginStart="20dp"
          android:layout_marginLeft="10dp"
          android:layout_marginTop="-6dp"
          android:layout_marginEnd="0dp"
          android:layout_marginBottom="20dp"
          android:background="@drawable/et_rounded_corner"
          android:drawableStart="@drawable/icon_lock"
          android:drawablePadding="8dp"
          android:hint="Date of Birth"
          android:inputType="date"
          android:padding="15dp"
          android:textColor="@color/primaryColor"
          android:textColorHint="@color/primaryColor"
          android:textSize="15sp"
          android:textStyle="bold" />
      <EditText
          android:id="@+id/et__aS_idCard_acdYear"
          android:layout_width="200dp"
          android:layout_below="@+id/et__aS_idCard_DOB"
          android:layout_height="wrap_content"
          android:layout_marginStart="20dp"
          android:layout_marginLeft="10dp"
          android:layout_marginTop="-6dp"
          android:layout_marginEnd="0dp"
          android:layout_marginBottom="20dp"
          android:background="@drawable/et_rounded_corner"
          android:drawableStart="@drawable/icon_lock"
          android:drawablePadding="8dp"
          android:hint="Acadamic Year"
          android:inputType="number"
          android:padding="15dp"
          android:textColor="@color/primaryColor"
          android:textColorHint="@color/primaryColor"
          android:textSize="15sp"
          android:textStyle="bold" />

      <EditText
          android:id="@+id/et__aS_idCard_genralno"
          android:layout_width="200dp"
          android:layout_below="@+id/et__aS_idCard_acdYear"
          android:layout_height="wrap_content"
          android:layout_marginStart="20dp"
          android:layout_marginLeft="10dp"
          android:layout_marginTop="-6dp"
          android:layout_marginEnd="0dp"
          android:layout_marginBottom="20dp"
          android:background="@drawable/et_rounded_corner"
          android:drawableStart="@drawable/icon_lock"
          android:drawablePadding="8dp"
          android:hint="Genral Register No."
          android:inputType="number"
          android:padding="15dp"
          android:textColor="@color/primaryColor"
          android:textColorHint="@color/primaryColor"
          android:textSize="15sp"
          android:textStyle="bold" />

      <EditText
          android:id="@+id/et__aS_idCard_class"
          android:layout_width="150dp"
          android:layout_below="@+id/et__aS_idCard_genralno"
          android:layout_height="wrap_content"
          android:layout_marginStart="20dp"
          android:layout_marginLeft="10dp"
          android:layout_marginTop="-6dp"
          android:layout_marginEnd="0dp"
          android:layout_marginBottom="20dp"
          android:background="@drawable/et_rounded_corner"
          android:drawableStart="@drawable/icon_lock"
          android:drawablePadding="8dp"
          android:hint="Class"
          android:inputType="number"
          android:padding="15dp"
          android:textColor="@color/primaryColor"
          android:textColorHint="@color/primaryColor"
          android:textSize="15sp"
          android:textStyle="bold" />
      <EditText
          android:id="@+id/et__aS_idCard_adress"
          android:layout_width="320dp"
          android:layout_height="100dp"
          android:layout_below="@+id/et__aS_idCard_class"
          android:layout_marginStart="20dp"
          android:layout_marginLeft="10dp"
          android:layout_marginTop="-10dp"
          android:layout_marginEnd="0dp"
          android:layout_marginBottom="20dp"
          android:background="@drawable/et_rounded_corner"
          android:drawableStart="@drawable/icon_lock"
          android:drawablePadding="8dp"
          android:hint="Student Adreess"
          android:inputType="text|textMultiLine"
          android:padding="15dp"
          android:textColor="@color/primaryColor"
          android:textColorHint="@color/primaryColor"
          android:textSize="15sp"
          android:textStyle="bold" />
      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Submit"

          android:textSize="18sp"
          android:layout_below="@+id/et__aS_idCard_adress"
          android:id="@+id/btn_submit_card"
          android:background="@drawable/et_rounded_corner"
          android:layout_marginLeft="150dp"
          android:layout_marginBottom="30dp"

          />
    </RelativeLayout>

</ScrollView>
  </FrameLayout>