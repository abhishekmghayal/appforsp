<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_clerkleave"
    tools:context=".ClerkModule.ClerkLeave.ClerkApplyLeaveRequestActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/tv_top_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="Apply For Leave"
                android:textStyle="bold"
                android:fontFamily="@font/playfairdisplayvariablefontwght"
                android:textColor="@color/primaryColor"
                android:textSize="35dp" />
        </RelativeLayout>

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <EditText
                android:id="@+id/et__aclr_id"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/et_rounded_corner"
                android:fontFamily="@font/f1"
                android:drawableStart="@drawable/icon_lock"
                android:drawablePadding="8dp"
                android:hint="Id Of Clerk"
                android:inputType="textCapCharacters"
                android:padding="15dp"
                android:textColor="@color/primaryColor"
                android:textColorHint="@color/primaryColor"
                android:textSize="15sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/et__aclr_Name"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/et__aclr_id"
                android:layout_marginLeft="10dp"
                android:background="@drawable/et_rounded_corner"
                android:fontFamily="@font/f1"
                android:drawableStart="@drawable/icon_lock"
                android:drawablePadding="8dp"
                android:hint="Clerk Name"
                android:inputType="text"
                android:padding="15dp"
                android:textColor="@color/primaryColor"
                android:textColorHint="@color/primaryColor"
                android:textSize="15sp"
                android:textStyle="bold" />
            <ImageView
                android:layout_width="450dp"
                android:layout_height="wrap_content"
                android:id="@+id/img__aclr_div1"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/et__aclr_Name"
                android:src="@drawable/division_line" />
            <EditText
                android:id="@+id/et__aclr_designation"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/img__aclr_div1"
                android:layout_marginLeft="10dp"
                android:background="@drawable/et_rounded_corner"
                android:fontFamily="@font/f1"
                android:drawableStart="@drawable/icon_lock"
                android:drawablePadding="8dp"
                android:hint="Designation Of Leave"
                android:inputType="text|textMultiLine"
                android:padding="15dp"
                android:textColor="@color/primaryColor"
                android:textColorHint="@color/primaryColor"
                android:textSize="15sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/et__aclr_lestartdate"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/et__aclr_designation"
                android:layout_marginLeft="10dp"
                android:background="@drawable/et_rounded_corner"
                android:fontFamily="@font/f1"
                android:drawableStart="@drawable/icon_lock"
                android:drawablePadding="8dp"
                android:hint="Start Date"
                android:inputType="text|textMultiLine"
                android:padding="15dp"
                android:textColor="@color/primaryColor"
                android:textColorHint="@color/primaryColor"
                android:textSize="15sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/et__aclr_leenddate"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/et__aclr_lestartdate"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/et__aclr_designation"
                android:layout_marginLeft="10dp"
                android:background="@drawable/et_rounded_corner"
                android:fontFamily="@font/f1"
                android:drawableStart="@drawable/icon_lock"
                android:drawablePadding="8dp"
                android:hint="End Date"
                android:inputType="text|textMultiLine"
                android:padding="15dp"
                android:textColor="@color/primaryColor"
                android:textColorHint="@color/primaryColor"
                android:textSize="15sp"
                android:textStyle="bold" />
            <ImageView
                android:layout_width="450dp"
                android:layout_height="wrap_content"
                android:id="@+id/img__aclr_div2"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/et__aclr_leenddate"
                android:src="@drawable/division_line" />
            <EditText
                android:id="@+id/et__aclr_letitle"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/img__aclr_div2"
                android:layout_marginLeft="10dp"
                android:background="@drawable/et_rounded_corner"
                android:fontFamily="@font/f1"
                android:drawableStart="@drawable/icon_lock"
                android:drawablePadding="8dp"
                android:hint="Leave Title"
                android:inputType="text|textMultiLine"
                android:padding="15dp"
                android:textColor="@color/primaryColor"
                android:textColorHint="@color/primaryColor"
                android:textSize="15sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/et__aclr_leDescription"
                android:layout_width="350dp"
                android:layout_height="180dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/et__aclr_letitle"
                android:layout_marginLeft="10dp"
                android:background="@drawable/et_rounded_corner"
                android:fontFamily="@font/f1"
                android:drawableStart="@drawable/icon_lock"
                android:drawablePadding="8dp"
                android:hint="Leave Description"
                android:inputType="textLongMessage"
                android:padding="15dp"
                android:textColor="@color/primaryColor"
                android:textColorHint="@color/primaryColor"
                android:textSize="15sp"
                android:textStyle="bold"
                />
            <Button
                android:id="@+id/btn__aclr_Apply"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/et__aclr_leDescription"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@color/primaryColor"
                android:text="Apply For Leave" />




        </RelativeLayout>
    </ScrollView>
</FrameLayout>